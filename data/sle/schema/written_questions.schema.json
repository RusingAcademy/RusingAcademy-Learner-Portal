{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SLE Written Expression Question",
  "type": "object",
  "required": [
    "id",
    "language",
    "category",
    "level",
    "type",
    "stem",
    "options",
    "correct_answer",
    "explanation"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^(fr|en)_written_[a-z_]+_\\d{3}$"
    },
    "language": {
      "type": "string",
      "enum": [
        "fr",
        "en"
      ]
    },
    "category": {
      "type": "string"
    },
    "category_name": {
      "type": "string"
    },
    "level": {
      "type": "string",
      "enum": [
        "A",
        "B",
        "C"
      ]
    },
    "type": {
      "type": "string",
      "enum": [
        "fill_blank",
        "error_identification"
      ]
    },
    "stem": {
      "type": "string",
      "minLength": 20
    },
    "options": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 4,
      "maxItems": 4
    },
    "correct_answer": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3
    },
    "explanation": {
      "type": "string",
      "minLength": 20
    },
    "grammar_rule": {
      "type": "string"
    },
    "common_error": {
      "type": "string"
    },
    "difficulty": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  }
}