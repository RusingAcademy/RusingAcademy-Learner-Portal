{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "question_bank",
  "title": "SLE Question",
  "description": "A single question with follow-ups, timing, and variants for SLE practice.",
  "type": "object",
  "required": ["id", "language", "part", "level_target", "topic_domain", "question_text", "followups", "timing_seconds"],
  "properties": {
    "id": { "type": "string", "pattern": "^Q-(FR|EN)-\\d{3}$" },
    "language": { "type": "string", "enum": ["FR", "EN"] },
    "part": { "type": "string", "enum": ["I", "II", "III", "IV"] },
    "level_target": { "type": "string", "enum": ["A", "B", "C"] },
    "topic_domain": { "type": "string", "enum": ["WRK", "PRJ", "POL", "HR", "SVC", "TEC", "ENV", "FIN", "COM", "DIV"] },
    "question_text": { "type": "string", "minLength": 10 },
    "followups": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "timing_seconds": { "type": "integer", "minimum": 15, "maximum": 300 },
    "variants": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": false
}
